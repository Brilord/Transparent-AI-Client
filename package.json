{
  "name": "planaclient-v2.0",
  "version": "1.0.0",
  "description": "Electron application with transparent background for storing website links",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --remote-debugging-port=9222",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "keywords": ["electron", "transparent", "link-storage"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.brilord.planaclient",
    "productName": "PlanaClientV2.0",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "preload-link.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PlanaClientV2.0"
    },
    "portable": {
      "artifactName": "PlanaClientV2.0-${version}.exe"
    }
  }
}
