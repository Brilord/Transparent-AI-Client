{
  "name": "planaclient-v2.0",
  "version": "1.0.0",
  "description": "Electron application with transparent background for storing website links",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --remote-debugging-port=9222",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:portable": "electron-builder --win portable",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "transparent",
    "link-storage"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.brilord.planaclient",
    "productName": "PlanaClientV2.0",
    "directories": {
      "buildResources": "assets"
    },
    "icon": "assets/icons/png/1024x1024.png",
    "files": [
      "main.js",
      "preload.js",
      "preload-link.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icons/png/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PlanaClientV2.0"
    },
    "portable": {
      "artifactName": "PlanaClientV2.0-${version}.exe"
    }
  }
}
