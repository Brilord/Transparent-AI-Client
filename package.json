{
  "name": "transparent-ai-client",
  "version": "1.0.0",
  "description": "Electron application with transparent background for storing website links",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --remote-debugging-port=9222",
    "bench:startup": "PERF_BENCH=1 electron .",
    "test": "node tests/smoke.js && node tests/extended.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:ci": "electron-builder --win --publish always",
    "build:mac": "electron-builder --mac",
    "build:portable": "electron-builder --win portable",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "transparent",
    "link-storage"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "clipboardy": "^3.0.0",
    "electron": "39.2.7",
    "electron-builder": "^24.6.4",
    "playwright-core": "^1.48.0"
  },
  "build": {
    "appId": "com.brilord.transparentaiclient",
    "productName": "Transparent AI Client",
    "directories": {
      "output": "transparent-ai-client-dist",
      "buildResources": "assets"
    },
    "icon": "assets/icons/png/1024x1024.png",
    "files": [
      "src/main/**/*",
      "src/renderer/**/*",
      "src/locales/**/*",
      "assets/**",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icons/png/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Transparent AI Client"
    },
    "portable": {
      "artifactName": "Transparent-AI-Client-${version}.exe"
    }
  }
}
